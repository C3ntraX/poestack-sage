{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "paths": {
      "@/components-v1/*": ["./src/ui/components/v1/*"],
      "@/lib/utils": ["./src/ui/lib/utils"]
    }
  },
  "include": ["./src", "./test"]
}
