{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "declaration": true
  },
  "include": ["./src"]
}
